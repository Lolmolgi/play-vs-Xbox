<body>

    <h1>Participez à la discussion</h1>

    <!-- Formulaire de soumission -->
    <form id="messageForm">
        <label for="nom">Nom :</label>
        <input type="text" id="nom" name="nom" required placeholder="Votre nom">

        <label for="message">Message :</label>
        <textarea id="message" name="message" rows="4" required placeholder="Votre message"></textarea>

        <label for="password">Mot de passe :</label>
        <input type="password" id="password" name="password" required placeholder="Mot de passe pour la suppression">

        <button type="submit">Envoyer</button>
    </form>

    <!-- Section des messages affichés -->
    <div class="message-list" id="messageList">
        <h2>Messages envoyés :</h2>
    </div>

    <script>
        // Définir le mot de passe du modérateur
        const MODERATOR_PASSWORD = "JO2024";

        // Fonction pour récupérer les messages depuis le localStorage
        function getMessages() {
            return JSON.parse(localStorage.getItem('messages')) || [];
        }

        // Fonction pour afficher les messages stockés
        function displayMessages() {
            const messages = getMessages();
            const messageList = document.getElementById('messageList');

            // Efface les anciens messages affichés
            messageList.innerHTML = '<h2>Messages envoyés :</h2>';

            // Ajoute chaque message avec un bouton de suppression
            messages.forEach((message, index) => {
                const messageItem = document.createElement('div');
                messageItem.classList.add('message-item');
                messageItem.innerHTML = `
                    <span><strong>${message.nom} :</strong> ${message.message}</span>
                    <button class="delete-btn" onclick="promptDeleteMessage(${index})">Supprimer</button>
                `;
                messageList.appendChild(messageItem);
            });
        }

        // Fonction pour sauvegarder un nouveau message dans le localStorage
        function saveMessage(nom, message, password) {
            const messages = getMessages();
            messages.push({ nom: nom, message: message, password: password });
            localStorage.setItem('messages', JSON.stringify(messages));
        }

        // Fonction pour demander le mot de passe avant de supprimer
        function promptDeleteMessage(index) {
            const passwordInput = prompt("Entrez votre mot de passe ou le mot de passe du modérateur pour supprimer ce message :");
            if (passwordInput !== null) {
                deleteMessage(index, passwordInput);
            }
        }

        // Fonction pour supprimer un message après vérification du mot de passe ou du mot de passe du modérateur
        function deleteMessage(index, passwordInput) {
            const messages = getMessages();
            if (messages[index].password === passwordInput || passwordInput === MODERATOR_PASSWORD) {
                messages.splice(index, 1); // Supprime le message à l'index donné
                localStorage.setItem('messages', JSON.stringify(messages)); // Met à jour le stockage
                displayMessages(); // Met à jour l'affichage
            } else {
                alert("Mot de passe incorrect !");
            }
        }

        // Gérer l'événement de soumission du formulaire
        document.getElementById('messageForm').addEventListener('submit', function(event) {
            event.preventDefault();

            // Récupérer les données du formulaire
            const nom = document.getElementById('nom').value;
            const message = document.getElementById('message').value;
            const password = document.getElementById('password').value;

            // Sauvegarder le message
            saveMessage(nom, message, password);

            // Afficher les messages mis à jour
            displayMessages();

            // Réinitialiser le formulaire
            document.getElementById('messageForm').reset();
        });

        // Afficher les messages lors du chargement de la page
        displayMessages();
    </script>

</body>
</html>
